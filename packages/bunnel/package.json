{
  "name": "bunnel",
  "version": "0.1.0",
  "description": "A simple HTTP tunnel client for local development",
  "type": "module",
  "main": "dist/client/index.js",
  "types": "dist/client/index.d.ts",
  "bin": {
    "bunnel": "dist/cli/bunnel.js"
  },
  "files": [
    "dist/client",
    "dist/cli",
    "README.md"
  ],
  "scripts": {
    "build": "esbuild src/client/index.ts src/cli/bunnel.ts --bundle --platform=node --format=esm --outdir=dist --packages=external",
    "start": "bunnel client",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "tunnel",
    "http",
    "websocket",
    "development",
    "local",
    "proxy"
  ],
  "dependencies": {
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/node": "^22.13.5",
    "esbuild": "^0.20.1",
    "typescript": "^5.0.0"
  }
}
